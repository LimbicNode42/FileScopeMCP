# FileScopeMCP Configuration
# Copy this file to .env and adjust values for your environment

# =============================================================================
# RUNTIME ENVIRONMENT
# =============================================================================
NODE_ENV=production
HOST=0.0.0.0
PORT=3000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
DEBUG=

# Development logging (set to true for development)
ENABLE_PERFORMANCE_LOGGING=false

# =============================================================================
# HTTP SERVER CONFIGURATION
# =============================================================================
# CORS Configuration
CORS_ORIGIN=*
# CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Security Configuration
ENABLE_DNS_REBINDING_PROTECTION=false
ALLOWED_HOSTS=127.0.0.1,localhost

# Request handling
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE=10mb

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_SERVER_NAME=FileScopeMCP
MCP_SERVER_VERSION=1.0.0

# =============================================================================
# FILE PROCESSING CONFIGURATION
# =============================================================================
# File size limits
MAX_FILE_SIZE_MB=10

# Exclusion patterns
EXCLUDED_EXTENSIONS=.log,.tmp,.cache,.lock
EXCLUDED_DIRECTORIES=node_modules,.git,dist,build,.next,coverage

# Performance settings
MAX_CONCURRENT_FILES=100
FILE_SCAN_TIMEOUT_MS=5000

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Workspace path (required for Docker)
# This should point to your project/codebase directory
WORKSPACE_PATH=./

# Optional: Specific project path within workspace
PROJECT_PATH=./

DATA_PATH=./data

# Optional: Configuration directory
CONFIG_PATH=./config

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Hot reload for development
HOT_RELOAD=false

# Debug configuration
DEBUG_PORT=9229

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# Resource limits (uncomment to override defaults)
# MEMORY_LIMIT=1G
# CPU_LIMIT=0.5
# MEMORY_RESERVATION=256M
# CPU_RESERVATION=0.1
