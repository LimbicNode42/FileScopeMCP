{
  "name": "FileScopeMCP",
  "version": "1.0.0",
  "description": "MCP server for file hierarchy and dependency tracking",
  "main": "dist/mcp-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp-server.js",
    "start:stdio": "node dist/mcp-server.js",
    "start:http": "node dist/start-http.js",
    "dev": "npm run build && npm run start:http",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "docker:build": "docker build -t filescope-mcp .",
    "docker:build:prod": "docker build -f Dockerfile.production -t filescope-mcp:production .",
    "docker:run": "docker run --rm -p 3000:3000 --env-file .env filescope-mcp",
    "docker:up": "docker-compose up -d",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f filescope-mcp",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "chokidar": "^3.6.0",
    "mermaid": "^11.6.0",
    "zod": "^3.25.28",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@vitest/coverage-v8": "^3.1.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  }
}
